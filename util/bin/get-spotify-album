#!/usr/bin/env osascript
set currentlyPlayingAlbum to getCurrentlyPlayingAlbum()
do shell script "echo " & currentlyPlayingAlbum

-- Method to get the currently playing track
on getCurrentlyPlayingAlbum()
  tell application "Spotify"
    set currentArtist to artist of current track as string
    set currentTrack to name of current track as string
    set currentAlbum to album of current track as string

    return currentArtist & " - " & currentAlbum
  end tell
end getCurrentlyPlayingAlbum
