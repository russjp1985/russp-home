#!/usr/bin/env php
<?php

$opts = getopt('hf:c:');

$usage = <<<USAGE

 -h                 Help message
 -f <filename>      File where we write the new component (REQUIRED)
 -c <ClassName>     Name of the class we are going to write (OPTIONAL). If not defined, uses the basename of the filepath

USAGE;

$filename = $opts['f'];

if (isset($opts['h'])) {
    echo $usage; exit();
};

if (empty($opts['f'])) {
    echo "-f <filename> is required!\n\n$usage"; exit();
}

